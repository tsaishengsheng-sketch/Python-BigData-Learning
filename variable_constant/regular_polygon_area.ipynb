    "import math\n",
    "num = eval(input('How many sides: '))\n",
    "side = eval(input('Enter Length of a side: '))\n",
    "area = (num * side ** 2) / (4 * math.tan(math.pi/num))\n",
    "print('Area of n-side is %.2f'%(area))"
